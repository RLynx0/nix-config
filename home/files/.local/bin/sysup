#!/usr/bin/env bash

#   â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ•—   â–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ•—   â–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—    #
#   â–ˆâ–ˆâ•”â•â•â•â•â•â•šâ–ˆâ–ˆâ•— â–ˆâ–ˆâ•”â•â–ˆâ–ˆâ•”â•â•â•â•â•â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•—   #
#   â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— â•šâ–ˆâ–ˆâ–ˆâ–ˆâ•”â• â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•   #
#   â•šâ•â•â•â•â–ˆâ–ˆâ•‘  â•šâ–ˆâ–ˆâ•”â•  â•šâ•â•â•â•â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•”â•â•â•â•    #
#   â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•‘â•šâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•â–ˆâ–ˆâ•‘        #
#   â•šâ•â•â•â•â•â•â•   â•šâ•â•   â•šâ•â•â•â•â•â•â• â•šâ•â•â•â•â•â• â•šâ•â•        #
#      ___        ___ _                  __      #
#     | _ )_  _  | _ \ |  _  _ _ _ __ __/  \     #
#     | _ \ || | |   / |_| || | ' \\ \ / () |    #
#     |___/\_, | |_|_\____\_, |_||_/_\_\\__/     #
#          |__/           |__/                   #


color="auto"

while getopts "cpya:i:h" arg; do
    case "$arg" in
    c) color="always" ;;
    p) force_pacman="yes" ;;
    y) auto_confirm="yes" ;;
    a) alert_sound="$OPTARG" ;;
    i) alert_icon="$OPTARG" ;;
    *)
        echo "Usage: $(basename "$0") [OPTIONS]"
        printf "\nOptions:\n"
        echo "  -c                      Force arch package installers to use color"
        echo "  -p                      Force using pacman as arch package installer"
        echo "  -y                      Automatically confirm all yes/no prompts"
        echo "  -a <ALERT SOUND>        Path to sound file to play when done"
        echo "                          This will also send a pop-up notification"
        echo "  -i <NOTIFICATION ICON>  Path to icon to use for pop-up notification"
        echo "                          Does nothing if -a is not set"
        echo "  -h                      Print this help message"
        exit 1
    esac
done
shift $(($OPTIND-1))


command_q() {
    command -v "$1" > /dev/null
}
print_separator() {
    printf "%s\n\n" "---"
}

# Debian
[ -n "$auto_confirm" ] && yflag='-y'
if command_q apt; then
    echo "î½ Updating Apt..."
    sudo apt $yflag update
    sudo apt $yflag dist-upgrade
    sudo apt $yflag full-upgrade
    sudo apt $yflag autopurge
    print_separator
fi
if command_q snap; then
    echo "ïŒ› Refreshing Snap..."
    sudo snap refresh
    print_separator
fi

# RedHat
[ -n "$auto_confirm" ] && yflag='--assumeyes'
if command_q dnf; then
    echo "ó±„› Updating Dnf..."
    sudo dnf $yflag distro-sync
    sudo dnf $yflag upgrade
    sudo dnf $yflag autoremove
    print_separator
fi

# Arch
[ -n "$auto_confirm" ] && yflag='--noconfirm'
if command_q yay && [ -z "$force_pacman" ]; then
    echo "ó°£‡ Updating Yay..."
    yay $yflag --color "$color" -Syu
    orphaned="$(yay -Qdtq)" \
    && yay $yflag --color "$color" -Rnsc $orphaned
    yay $yflag --color "$color" -Sc
    skip_pacman=1
    print_separator
fi
if command_q paru && [ -z "$force_pacman" ]; then
    echo "ó°£‡ Updating Paru..."
    paru $yflag --color "$color" -Syu
    orphaned="$(paru -Qdtq)" \
    && paru $yflag --color "$color" -Rnsc $orphaned
    paru $yflag --color "$color" -Sc
    skip_pacman=1
    print_separator
fi
if command_q pacman && [ -z "$skip_pacman" ]; then
    echo "ó°£‡ Updating Pacman..."
    sudo pacman $yflag --color "$color" -Syu
    orphaned="$(pacman -Qdtq)" \
    && sudo pacman $yflag --color "$color" -Rnsc $orphaned
    print_separator
fi
if command_q paccache && [ -z "$skip_pacman" ]; then
    echo "ó°£‡ Pruning with Paccache..."
    sudo paccache -r
    print_separator
fi

# NixOs
if command_q nixos-rebuild; then
    echo "ïŒ“ Rebuilding NixOS..."
    sudo nixos-rebuild switch
    sudo nix-store --gc
    sudo nix-collect-garbage --delete-older-than 30d
    print_separator
fi

# Flatpak
[ -n "$auto_confirm" ] && yflag='--assumeyes'
if command_q flatpak; then
    echo "ïŒ¤ Updating Flatpak..."
    flatpak $yflag update
    print_separator
fi

# Rust
if command_q rustup; then
    echo "ğŸ¦€ Updating Rust..."
    rustup update
    print_separator
fi

# Haskell
if command_q ghcup; then
    echo "î· Updating Haskell..."
    ghcup upgrade 2>&1 \
    | tee /dev/stderr \
    | awk -F "'" '/New \w+ version available/ {print $2}' \
    | tee /dev/stdout \
    | sh;

    ghcup gc
    print_separator
fi

# Locate
if command_q updatedb; then
    echo "Updating Database..."
    sudo updatedb --verbose \
    | awk -v c="$(tput cols)" '
        { n++ }
        n % 25000 == 0 {
            gsub(/[^\x00-\x7F]/, "?")
            rem = substr($0, c - 3, 1)
            printf "\r\033[K%s", substr($0, 0, c - 3)
            if(rem) printf "..."
        }
        END { printf "\r\033[K%d Files\n", n }'
    print_separator
fi

command_q alert \
&& [ "$alert_sound" != "" ] \
&& alert -f "$alert_sound" -n "$(basename "$0")" -i "$alert_icon" 'Done!' \
|| echo 'Done!'
